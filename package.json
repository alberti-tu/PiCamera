{
	"name": "picamera",
	"version": "2.0.0",
	"description": "Security camera network on NodeJS and Raspberry Pi",
	"scripts": {
		"start:app": "cd App && npm start",
		"start:client": "cd Client && npm start",
		"start:server": "cd Server && npm start",
		
		"build": "cd Server && npm run build && cd ../Client && npm run build && cd ../App && npm run build",
		"build:app": "cd App && npm run build",
		"build:client": "cd Client && npm run build",
		"build:server": "cd Server && npm run build",

		"config:client": "cd Client && npm run config",
		"config:server": "cd Server && npm run config",
		
		"install": "cd Server && npm i --force && cd ../Client && npm i --force && cd ../App && npm i --force",
		"install:app": "cd App && npm i --force",
		"install:client": "cd Client && npm i --force",
		"install:server": "cd Server && npm i --force"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/alberti-tu/PiCamera.git"
	},
	"author": "alberti-tu",
